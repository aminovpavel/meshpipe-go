static_resources:
  listeners:
    - name: meshpipe_grpc_listener
      address:
        socket_address:
          address: 0.0.0.0
          port_value: ${GRPC_PROXY_PORT}
      filter_chains:
        - filters:
            - name: envoy.filters.network.http_connection_manager
              typed_config:
                "@type": type.googleapis.com/envoy.extensions.filters.network.http_connection_manager.v3.HttpConnectionManager
                codec_type: AUTO
                stat_prefix: ingress_http
                route_config:
                  name: meshpipe_route
                  virtual_hosts:
                    - name: meshpipe
                      domains: ["*"]
                      routes:
                        - match:
                            prefix: "/"
                          route:
                            cluster: meshpipe_upstream
                            timeout: 0s
${AUTH_HEADERS}
                http_filters:
${GRPC_WEB_HTTP_FILTER}
                  - name: envoy.filters.http.router
                    typed_config:
                      "@type": type.googleapis.com/envoy.extensions.filters.http.router.v3.Router
  clusters:
    - name: meshpipe_upstream
      connect_timeout: 5s
      type: LOGICAL_DNS
      lb_policy: ROUND_ROBIN
      load_assignment:
        cluster_name: meshpipe_upstream
        endpoints:
          - lb_endpoints:
              - endpoint:
                  address:
                    socket_address:
                      address: ${GRPC_UPSTREAM_HOST}
                      port_value: ${GRPC_UPSTREAM_PORT}
      typed_extension_protocol_options:
        envoy.extensions.upstreams.http.v3.HttpProtocolOptions:
          "@type": type.googleapis.com/envoy.extensions.upstreams.http.v3.HttpProtocolOptions
          explicit_http_config:
            http2_protocol_options: {}

admin:
  access_log_path: /tmp/admin_access.log
  address:
    socket_address:
      address: 0.0.0.0
      port_value: ${GRPC_PROXY_ADMIN_PORT}
